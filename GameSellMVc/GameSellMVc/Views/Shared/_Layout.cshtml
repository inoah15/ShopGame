<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>
        GameHub Store
        
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="~/Asset/images/gamehublogo.png" />
    <link rel="stylesheet" type="text/css" media="screen" href="~/Asset/style/style.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="~/Asset/style/header.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="~/Asset/style/footer.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="~/Asset/style/burger-menu.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="~/Assets/tyle/search-bar.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="~/Asset/style/slideshow.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="~/Asset/style/spotlight.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="~/Asset/style/product-tab.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="~/Asset/style/product-card.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="~/Asset/style/sticky.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="~/Asset/style/product-line.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="~/Asset/style/common-style.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="~/Asset/style/menu-bar.css" />
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/Asset/script/login.js"></script>
    <script src="~/Asset/script/burger-menu.js"></script>
    <script src="~/Asset/script/slideshow.js"></script>
    <script src="~/Asset/script/product-tab.js"></script>
    <script src="~/Asset/script/menu-bar.js"></script>
</head>
<body>
    @RenderBody()
    <!--Header-->
    <header class="sticky">
        <!--Header Menu-->
        <div class="header-menu">
            <a id="category" class="pretty-anchor">Category</a>
            <div class="sub-menu">
                <a class="pretty-anchor" @Html.ActionLink("Stream Game", "Stream", "Category")></a>
                <a class="pretty-anchor" @Html.ActionLink("Origin Game", "Origin", "Category")></a>
                <a class="pretty-anchor" @Html.ActionLink("Battle Game", "Battle", "Category")></a>
            </div>
            <a href="product/Insurgency.html" class="pretty-anchor">Daily Deals</a>
            <a href="feedback/feed-back.html" class="pretty-anchor">Feedback</a>
            <a id="login-btn" class="purple-btn" href="account/user-login.html">Login</a>
        </div>
        <!--Burger Menu Icon-->
        <div class="burger-menu-icon">
            <div class="burger"></div>
        </div>
        <!--Website Logo-->
        <div class="logo">
            <a href="~/Home/Index"><img id="logo-img" src="~/Asset/images/gamehub.png" alt="GameHub Logo"></a>
        </div>
        <!--Shopping Cart Icon-->
        <a class="cart-icon pretty-anchor" href="~/Category/ShoppingCart">
            <div><i class="fa fa-shopping-cart"></i></div>
        </a>
        <!--Search Bar-->
        <div class="search-bar-wrapper">
            <div class="search-bar">
                <input type="text" class="search-term" placeholder="What are you looking for?">
                <button type="submit" class="search-btn purple-btn" onclick="location.href = 'product/Fallout 76.html'"><i class="fa fa-search"></i></button>
            </div>
        </div>
        <!--Login Button (Desktop)-->
        <a class="login-wrapper pretty-anchor" href="~/Account/UserLogin">
            <div class="login-btn"><i class="fa fa-user"></i> sign in</div>
        </a>
    </header>
    <!--Menu Bar (Desktop)-->
    <div class="menu-bar sticky">
        <a class="pretty-anchor"  href="/Category/Stream">Stream Game</a>
        <a class="pretty-anchor"  href="/Category/Origin">Origin Game</a>
        <a class="pretty-anchor"  href="/Category/Battle">Battle Game</a>
    </div>
    

    <!--Footer-->
    <footer>
        <!--Payment Logo-->
        <div id="payment-logo">
            <i class="fa fa-credit-card-alt"></i>
            <i class="fa fa-cc-visa"></i>
            <i class="fa fa-cc-mastercard"></i>
            <i class="fa fa-cc-paypal"></i>
        </div>
        <!--Footer Menu-->
        <div id="footer-menu">
            <a class="footer-option" href="~/FeedBack/AboutUs">About Us</a>
            <a class="footer-option" href="~/FeedBack/Errol">Support Center</a>
            <a class="footer-option" href="~/FeedBack/Errol">Terms of Use</a>
            <a class="footer-option" href="~/FeedBack/Errol">Privacy Policy</a>
            <a class="footer-option" href="/Account/AdminLogin">Administrator</a>
        </div>
        <!--Social Media Icon-->
        <div id="social-media">
            <a href="https://www.facebook.com/"><i class="fa fa-facebook"></i></a>
            <a href="https://www.google.com/"><i class="fa fa-google"></i></a>
            <a href="https://www.github.com/"><i class="fa fa-github"></i></a>
        </div>
        <!--Copyright Information-->
        <div id="copyright">
            <p>Designed by Nguyễn Mậu Nam</p>
        </div>
    </footer>
</body>
</html>